{
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "default_profile": "write",
    "play_sound_when_agent_done": true
  },
  "theme": "One Dark",
  "autosave": "on_focus_change",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "inlay_hints": {
    "enabled": false
  },
  "languages": {
    "Plain Text": {
      "show_edit_predictions": false
    },
    "JavaScript": {
      "format_on_save": {
        "external": {
          "command": "prettierd",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "Python": {
      "tab_size": 4,
      "format_on_save": {
        "external": {
          "command": "black",
          "arguments": ["-"]
        }
      }
    },
    "TypeScript": {
      "format_on_save": {
        "external": {
          "command": "prettierd",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "TSX": {
      "format_on_save": {
        "external": {
          "command": "prettierd",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "Markdown": {
      "format_on_save": {
        "external": {
          "command": "prettierd",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    }
  },
  "preferred_line_length": 120,
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "never"
  },
  "soft_wrap": "bounded",
  "tab_bar": {
    "show": false
  },
  "tab_size": 2,
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font Mono"
  },
  "ui_font_family": "JetBrainsMono Nerd Font Mono",
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "use_autoclose": false,
  "use_smartcase_search": true,
  "vertical_scroll_margin": 8,
  "vim_mode": true
}
